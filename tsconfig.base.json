{
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noEmitHelpers": true,
    "target": "es2021",
    "module": "esnext",
    "lib": ["es2021"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "plugins": [
      {
        "transform": "@nativescript/webpack/dist/transformers/NativeClass",
        "type": "raw"
      }
    ],
    "paths": {
      "@demo/shared": ["tools/demo/index.ts"],
      "@oilstone/plantimer-nativescript-auth0": ["packages/nativescript-auth0/index.d.ts"],
      "@oilstone/plantimer-nativescript-auth0/angular": ["packages/nativescript-auth0/angular/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
